{{page-title 'Flight Icons'}}
<header class="ds-header">
  <h1 id="title" class="ds-h1">
    Flight Icons
  </h1>
</header>
<main class="ds-main">
  <section class="ds-section">
    <p class="ds-p">See the <a class="ds-a" href="https://github.com/hashicorp/flight/blob/main/ember-flight-icons/README.md">README</a> for usage instructions.</p>
    <h2 class="ds-h2">Available Icons</h2>
      <ul class="ds-ul-grid">
        {{#each @model as |meta|}}
        {{log meta}}
          <li class="ds-li">
            <FlightIcon @name={{substring meta.Name}} @size={{if (eq meta.Size 16) "16"}}/>
            <br/>{{meta.Name}}
          </li>
        {{/each}}
      </ul>

  </section>
</main>
<footer class="ds-footer">
  <p class="ds-p"><a class="ds-a" href="https://github.com/hashicorp/flight">View On GitHub</a></p>
</footer>
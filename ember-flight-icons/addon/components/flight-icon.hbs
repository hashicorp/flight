<svg 
  class="flight-icon icon-{{@name}} {{if this.display "display-inline"}}"
  ...attributes
  aria-hidden="true"
  data-test-icon
  fill={{@color}} 
  height="{{this.size}}"
  id={{this.iconId}}
  viewBox="0 0 {{this.size}} {{this.size}}"
  width="{{this.size}}" 
  xmlns="http://www.w3.org/2000/svg"
>
  {{!-- Not sure how to find this path to the package in Ember, or what to Google --}}
  <use href='{{this.contextRootURL}}@hashicorp/flight-icons/sprite.svg#{{@name}}-{{this.size}}'></use>
</svg>

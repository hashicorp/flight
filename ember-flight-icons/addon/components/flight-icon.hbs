<svg 
  aria-hidden="true"
  class="flight-icon icon-{{@name}} {{if this.display "display-inline"}}"
  data-test-icon
  fill={{@fillColor}} 
  height="{{@size}}"
  id={{this.iconId}}
  viewBox="0 0 {{@size}} {{@size}}"
  width="{{@size}}" 
  xmlns="http://www.w3.org/2000/svg"
>
  <use href='./ember-flight-icons/icons/sprite.svg#{{@name}}-{{@size}}'></use>
</svg>
